{
  "manifest_version": 3,
  "name": "Pull Requester",
  "description": "I want your data",
  "version": "1.0",
  "action": {
    "default_popup": "chrome_extension/popup.html"
  },
  "host_permissions": [
    "https://*.github.com/"
  ],
  "permissions": [
    "activeTab",
    "identity"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches" : [
        "https://github.com/*",
      ]
    }
  ],
  "oauth2": {
    "client_id": "5f10afd2b8c4a92d251e",
    "scopes": [
        "repo"
    ]
  },
    "background": {
        "service_worker": "chrome_extension/background.js"
    }
}