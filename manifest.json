{
  "manifest_version": 3,
  "name": "This is so crazyyyy",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "pull_requester.html",
    "default_icon": "logo.png"
  },

  "permissions": ["storage", "identity", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}